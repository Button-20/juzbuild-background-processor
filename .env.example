# Example environment configuration for Redis
# Copy this to your .env file and update the values

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For Redis Cloud or remote Redis:
# REDIS_URL=redis://username:password@hostname:port

# Existing environment variables
BACKGROUND_PROCESSOR_SECRET=your-secret-key-here
VERCEL_TOKEN=your-vercel-token
NAMECHEAP_API_USER=your-namecheap-user
NAMECHEAP_API_KEY=your-namecheap-key
NAMECHEAP_USERNAME=your-namecheap-username
CLIENT_IP=your-client-ip

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/juzbuild

# GitHub
GITHUB_TOKEN=your-github-token