{
  "name": "juzbuild-background-processor",
  "version": "1.0.0",
  "description": "Background processor for JuzBuild website creation workflows",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"node --loader ts-node/esm\" src/server.ts",
    "build": "tsc",
    "clean": "if exist dist rmdir /s /q dist",
    "build:clean": "npm run clean && npm run build",
    "verify": "npm run build && node dist/server.js --version",
    "test:job-tracker": "npm run build && node dist/test-job-tracker.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t juzbuild-background-processor .",
    "docker:run": "docker run -p 3001:3001 --env-file .env juzbuild-background-processor",
    "docker:compose": "docker-compose up",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": [
    "background-processor",
    "website-creation",
    "automation"
  ],
  "author": "JuzBuild Team",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@vercel/sdk": "^1.13.4",
    "archiver": "^7.0.1",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.2",
    "googleapis": "^165.0.0",
    "handlebars": "^4.7.8",
    "mongodb": "^6.20.0",
    "nodemailer": "^7.0.9",
    "redis": "^5.8.3",
    "resend": "^6.4.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "^7.0.2",
    "@types/redis": "^4.0.10",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
