{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "./dist",
  "functions": {
    "api.js": {
      "maxDuration": 900,
      "memory": 1024,
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "^(?!/api/).*$",
      "dest": "/api.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
